@code {

    private MudTheme _posTheme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = "#4CAF50",      // Light Green
                Secondary = "#8BC34A",    // Light Green Secondary
                Tertiary = "#CDDC39",     // Lime
                AppbarBackground = "#388E3C", // Darker Green
                DrawerBackground = "#F1F8E9", // Light Green Background
                Success = "#2E7D32",    // Success Green
                Background = "#F5F5F5",   // Page background
                Surface = "#FFFFFF",      // Card backgrounds
                TextPrimary = "#212121", // Primary text
                TextSecondary = "#757575" // Secondary text
            },
            LayoutProperties = new LayoutProperties()
            {
                AppbarHeight = "64px",
                DrawerWidthLeft = "70px", // Only left drawer width specified
                DefaultBorderRadius = "4px"
            }
        };
}
