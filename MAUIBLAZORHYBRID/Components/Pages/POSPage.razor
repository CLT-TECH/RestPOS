    private async Task<bool> CheckNetworkConnection()
    {
        try
        {
            // Using JavaScript interop to check navigator.onLine
            return await JS.InvokeAsync<bool>("eval", "navigator.onLine");
        }
        catch (Exception ex)
        {
            // Fallback - assume online if JS interop fails
            return true;
        }
    }

