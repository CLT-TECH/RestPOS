            <ItemSearch />
        </MudItem>
        <MudItem xs="12" md="4" class="order-sm-0 order-md-1 order-0">
            <CustomerPanel />
        </MudItem>

        <!-- Center: Cart -->
        <MudItem xs="12" md="8" Class="order-2">
            <CartGrid />
        </MudItem>

        <!-- Right: Billing Summary + Payment -->
        <MudItem xs="12" md="4" Class="order-3">
            <BillingSummary />
            <PaymentPanel />
        </MudItem>

    </MudGrid>

